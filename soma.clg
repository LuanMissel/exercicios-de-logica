algoritmo soma;
// Síntese
//  Objetivo:  soma de dois numeros
//  Entrada : numeros
//  Saída   : soma


principal
	// Declarações
	inteiro numero1, numero2, soma;
	// Instruções
	escreva ("Digite um numero");
	leia (numero1);
	escreva ("Digite um numero");
	leia (numero2)	;
	soma = numero1 + numero2;
	escreva ("A SOMA É:", soma );
fimPrincipal
